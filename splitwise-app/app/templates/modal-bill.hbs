<div id="modal_bill" class="modal width-40">
    <div class="modal-content2">
      <div class="col no-pad_c s12">
        <ul class="tabs tabs-fixed-width z-depth-2">
          <li class="tab col s6"><a href="#test1" class="active">Individuals <i class="material-icons" style="position: relative; top: 5px;">person</i></a></li>
          <li class="tab col s6"><a href="#test2">Group <i class="material-icons" style="position: relative; top: 5px;">people</i></a></li>
        </ul>
      </div>
      
<!-- ======================Modal: Individual Tab=============================== -->
      <div class="modal-content custom-pad">
